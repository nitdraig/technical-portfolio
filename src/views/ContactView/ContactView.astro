---
import ContactForm from "./components/form/ContactForm.astro";
---

<div
  class="flex lg:h-full items-center justify-start lg:mb-10 my-6 lg:mx-0 mx-10"
>
  <div class="mx-auto w-full max-w-lg">
    <h3
      class="text-center uppercase tracking-[2px] text-3xl lg:text-4xl lg:tracking-[8px] text-white lg:pt-0 pt-5 pb-4 lg:pb-8"
    >
      Contact With Me
    </h3>
    <p class="mt-3 text-gray-300">
      Email me at <a
        href="mailto:agustind@duck.com"
        class="underline"
        target="_blank"
      >
        agustind@duck.com</a
      > or message here:
    </p>

    <ContactForm />
  </div>
</div>
