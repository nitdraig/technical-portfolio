---
import { info } from "../../data/info";
---

<section
  class="flex mt-4 items-start justify-between flex-col sm:flex-row text-white"
  id="experience"
>
  <div class="w-full lg:px-24 px-6">
    <h3
      class="lg:p-12 text-center uppercase tracking-[2px] text-3xl lg:text-4xl lg:tracking-[8px] text-white lg:pt-3 pt-5 pb-4 lg:pb-8"
    >
      My experience
    </h3>
    {
      info.experience.map((item) => (
        <div class="lg:my-10 my-4">
          <div class="flex justify-between items-center flex-wrap">
            <h3 class="text-3xl font-semibold">{item.name}</h3>
            <p class="text-sm text-gray text-purple-200">
              {item.startDate} - {item.endDate}
            </p>
          </div>
          <p class="text-lg mt-3 text-purple-500">{item.location}</p>
          <ul class="mt-3">
            {item.description.map((item) => (
              <li class="text-md text-gray">{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
